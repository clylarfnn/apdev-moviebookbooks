<!DOCTYPE html>
<html lang="en" dir="ltr">

  <head>
    <title>User Account - Booking History</title>
    <link rel="stylesheet" type="text/css" href="css/profile.css">
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/font-awesome/4.7.0/css/font-awesome.min.css"/>
    <script src="https://code.jquery.com/jquery-3.4.1.min.js" type="text/javascript"></script>
    <script type="text/javascript" src="js/userProfileScript.js"></script>
    <link rel="icon" type="image/x-icon" href="/images/favicon.ico">
  </head>
  <body>
    {{> header}}

    <div id="box">
      <div id="info">
        <img id="profile" src="../images/{{user.picture}}" />
        <h1 id="name">{{user.firstName}} {{user.lastName}}</h1>
      </div>

      <div id="details">
        <div id="profile-bar">
            <button type="button" class="profileTop current">Add Payment Method</button>
        </div>

        <div class="details">
          <form action="/submitpaymentmethod" method="POST" enctype="multipart/form-data">
            {{#if error}}
                <div class="alert alert-danger" role="alert">
                  {{error}}
                </div>
              {{/if}}
            <div class="section">
                <br>
              <dt>Name</dt>
              <dd>
                <input type="text" placeholder="First Name" name="firstName" id="firstName">
                <br>
                <input type="text" placeholder="Last Name" name="lastName" id="lastName">
              </dd>
            </div>
            <div class="tall section">
              <dt>Card Number</dt>
              <dd>
                <input type="text" placeholder="Card Number" name="cardNum" id="cardNum">
              </dd>
            </div>
            <div class="section">
              <dt>Expiration</dt>
              <dd>
                <input type="date" id="expiration" name="expiration">
              </dd>
            </div>
            <div class="section">
                <br>
              <dt>Bank</dt>
              <dd>
                <select name="bank" id="bank" class="dropdown">
                    <option value=""></option>
                    <option value="BDO">Debit</option>
                    <option value="BPI">Credit</option>
                    <option value="Metrobank">Metrobank</option>
                </select>
              </dd>
            </div>
            <div class="section">
                <br>
            <dt>Card Type</dt>
            <dd>
              <select name="debitOrCredit" id="debitOrCredit" class="dropdown">
                    <option value=""></option>
                    <option value="Debit">Debit</option>
                    <option value="Credit">Credit</option>
                </select>
            </dd>
            </div>
            <br>
            <div class="section">
              <dt>CVV</dt>
              <dd>
                <input type="text" placeholder="CVV" class="details" name="cvv" id ="cvv">
              </dd>
            </div>
            <div class="section"><br>
            <dt>Credit/Debit</dt>
            <dd>
              <select name="debitOrCredit" id="debitOrCredit" class="dropdown">
                    <option value=""></option>
                    <option value="Debit">Debit</option>
                    <option value="Credit">Credit</option>
                </select>
            </dd>
          </div>

            <br>
            <div class="button">
              <button class="edit" type="submit">Submit</button>
            </div>

          </form>
        </div>
      </div>
    </div>
    {{> footer}}
</body>
</html>