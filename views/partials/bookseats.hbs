              <option value="invalid" disabled selected hidden>Select Row Letter</option>
              <option value="A">A</option>
              <option value="B">B</option>
              <option value="C">C</option>
              <option value="D">D</option>
              <option value="E">E</option>
              <option value="F">F</option>
              <option value="G">G</option>
              <option value="H">H</option>
            </select>

            <br /><label for="seat-plan">Select Column</label><br />
            <select name="form2-col" id="form2-col">
              <option value="invalid" disabled selected hidden>Select Column Letter</option>
              <option value="1">1</option>
              <option value="2">2</option>
              <option value="3">3</option>
              <option value="4">4</option>
              <option value="5">5</option>
              <option value="6">6</option>
              <option value="7">7</option>
              <option value="8">8</option>
            </select>
          </div>
        </div>
        <div class="form" style="display:none">
          <h3>Ticket 3</h3>
          <div class="ticket">
            <label for="seat-plan">Select Row</label><br />
            <select name="form3-row" id="form3-row">
              <option value="invalid" disabled selected hidden>Select Row Letter</option>
              <option value="A">A</option>
              <option value="B">B</option>
              <option value="C">C</option>
              <option value="D">D</option>
              <option value="E">E</option>
              <option value="F">F</option>
              <option value="G">G</option>
              <option value="H">H</option>
            </select>

            <br /><label for="seat-plan">Select Column</label><br />
            <select name="form3-col" id="form3-col">
              <option value="invalid" disabled selected hidden>Select Column Letter</option>
              <option value="1">1</option>
              <option value="2">2</option>
              <option value="3">3</option>
              <option value="4">4</option>
              <option value="5">5</option>
              <option value="6">6</option>
              <option value="7">7</option>
              <option value="8">8</option>
            </select>
          </div>


        </div>
        <p id="errormsg" style="display:none; color:red"></p>
      <button type="submit" class="submitbutton">Submit Tickets</button>
      <!-- <input type="submit"  /> -->
      </form>
    </div>
