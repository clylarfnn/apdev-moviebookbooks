<!DOCTYPE html>
<html lang="en" dir="ltr">
    
  <head>
    <title>User Account - Booking History</title>
    <link rel="stylesheet" type="text/css" href="css/profile.css">
    <script src="https://code.jquery.com/jquery-3.4.1.min.js" type="text/javascript"></script>
    <script type="text/javascript" src="js/userProfileScript.js"></script>
  </head>
  <body>
    {{> header}}

    <div id="box">
      <div id="info">
        <img id="profile" src="../images/{{user.picture}}" />
        <h1 id="name">{{user.firstName}} {{user.lastName}}</h1>
          <div class="button">
            <a href="/profile" class="edit">Done Editing</a>
          </div>
      </div>
      
      <div id="details">
        <div id="profile-bar">
            <button type="button" class="profileTop current">Account Details</button>
            <button type="button" class="profileTop" onclick="location.href='/usereditcard'">Payment Details</button>
        </div> 
        
        <div id="accountDetails" class="details scroll">
          <form action="/submituseredit" method="POST" encType="multipart/form-data">
            {{#if error}}
                <div class="alert alert-danger" role="alert">
                  {{error}}
                </div>
              {{/if}}
            <div class="section">
              <dt>Name</dt>
              <dd>
                <p>{{user.firstName}} {{user.lastName}}
              </dd>
            </div>  
            <div class="section">
              <dt>Edit</dt>
              <dd>
                <input type="text" placeholder="First Name" name="firstName" id="firstName">
                <br>
                <input type="text" placeholder="Last Name" name="lastName" id="lastName">
              </dd>
            </div>
            <div class="section">
              <dt>Gender</dt>
              <dd>
                <p>{{user.gender}}
              </dd>
            </div>
            <div class="section">
              <dt>Edit</dt>
              <dd>
                <select name="gender" id="gender" class="dropdown">
                      <option value=""> </option>
                      <option value="Female">Female</option>
                      <option value="Male">Male</option>
                      <option value="Non-Binary">Non-Binary</option>
                  </select>
              </dd>
            </div>
            <div class="section">
              <dt>Birthday</dt>
              <dd>
                <p>{{user.birthday}}
              </dd>
            </div>
            <div class="section">
              <dt>Edit</dt>
              <dd>
                <input type="date" id="birthday" name="birthday">
              </dd>
            </div>
            <div class="tall section">
              <dt class="long">Contact Number</dt>
              <dd>
                <p>{{user.contactNum}}
              </dd>
            </div>
            <div class="section">
              <dt>Edit</dt>
              <dd>
                <input type="text" placeholder="Contact Number" class="details" name="contactNum" id ="contactNum">
              </dd>
            </div>
            <div class="section">
              <dt>Email</dt>
              <dd>
                <p>{{user.email}}
              </dd>
            </div>
            <div class="tall section">
              <dt>Edit</dt>
              <dd>
                <input type="text" placeholder="Email" class="details" name="email" id ="email">
              </dd>
            </div>
            <div class="tall section">
              <dt class="long">Edit Picture</dt>
              <dd>
                <input type="file" id="picture" name="picture" accept="image/*">
              </dd>
            </div>
            <div class="tall section">
              <dt class="long">Edit Password</dt>
              <dd>
                <input type="text" placeholder="Password" id="password" name="password">
              </dd>
            </div>

            <br>
            <div class="button">
              <button class="edit" type="submit">Submit</button>
            </div>
          </form>
        </div>
      </div>
    </div>
    {{> footer}}
</body>
</html>