<!DOCTYPE html>
<html lang="en" dir="ltr">
    
  <head>
    <title>User Account - Booking History</title>
    <link rel="stylesheet" type="text/css" href="css/profile.css">
    <script src="https://code.jquery.com/jquery-3.4.1.min.js" type="text/javascript"></script>
    <script type="text/javascript" src="js/userProfileScript.js"></script>
  </head>
  <body>
    {{> header}}

    <div id="box">
      <div id="info">
        <img id="profile" src="../images/{{user.picture}}" />
        <h1 id="name">{{user.firstName}} {{user.lastName}}</h1>
          <div class="button">
            <a href="/profile" class="edit">Done Editing</a>
          </div>
      </div>
      
      <div id="details">
        <div id="profile-bar">
            <button type="button" class="profileTop" onclick="location.href='/usereditprofile'">Account Details</button>
            <button type="button" class="profileTop current">Payment Details</button>
        </div> 
        
        <div id="accountDetails" class="details scroll">
          <form action="/submitcardedit" method="POST">
          {{#if error}}
              <div class="alert alert-danger" role="alert">
                {{error}}
              </div>
            {{/if}}
          <div class="section">
            <dt>Name</dt>
            <dd>
              <p>{{user.firstName}} {{user.lastName}}
            </dd>
          </div>  
          <div class="section">
            <dt>Edit</dt>
            <dd>
              <input type="text" placeholder="First Name" name="firstName" id="firstName">
              <br>
              <input type="text" placeholder="Last Name" name="lastName" id="lastName">
            </dd>
          </div>
          <div class="tall section">
            <dt class="long">Card Number</dt>
            <dd>
              <p>{{user.cardNum}}
            </dd>
          </div>
          <div class="section">
            <dt>Edit</dt>
            <dd>
              <input type="text" placeholder="Card Number" class="details" name="cardNum" id ="cardNum">
            </dd>
          </div>
          <div class="section">
            <dt>Expiration</dt>
            <dd>
              <p>{{user.expiration}}
            </dd>
          </div>
          <div class="section">
            <dt>Edit</dt>
            <dd>
              <input type="date" id="expiration" name="expiration">
            </dd>
          </div>
          <div class="section">
            <dt>Bank</dt>
            <dd>
              <p>{{user.bank}}
            </dd>
          </div>
          <div class="section">
            <dt>Edit</dt>
            <dd>
              <select name="bank" id="bank" class="dropdown">
                    <option value=""></option>
                    <option value="BDO">Debit</option>
                    <option value="BPI">Credit</option>
                    <option value="Metrobank">Metrobank</option>
                </select>
            </dd>
          </div>
          <div class="tall section">
            <dt class="long">Card Type</dt>
            <dd>
              <p>{{user.cardNum}}
            </dd>
          </div>
          <div class="section">
            <dt>Edit</dt>
            <dd>
              <select name="cardType" id="cardType" class="dropdown">
                    <option value=""></option>
                    <option value="Debit">VISA</option>
                    <option value="Credit">Mastercard</option>
                </select>
            </dd>
          </div>
          <div class="section">
            <dt>CVV</dt>
            <dd>
              <p>{{user.cvv}}
            </dd>
          </div>
          <div class="section">
            <dt>Edit</dt>
            <dd>
              <input type="text" placeholder="CVV" class="details" name="cvv" id ="cvv">
            </dd>
          </div>
          <div class="section">
            <dt>Credit/Debit</dt>
            <dd>
              <p>{{user.debitOrCredit}}
            </dd>
          </div>
          <div class="section">
            <dt>Edit</dt>
            <dd>
              <select name="debitOrCredit" id="debitOrCredit" class="dropdown">
                    <option value=""></option>
                    <option value="Debit">Debit</option>
                    <option value="Credit">Credit</option>
                </select>
            </dd>
          </div>

                <div class="button">
                    <button class="edit" type="submit">Submit</button>
                </div>
          </form>
        </div>
      </div>
    </div>
    {{> footer}}
</body>
</html>