<html>
    <head>
        <title>Login Form</title>
        <link rel="stylesheet" href="/css/login.css">
        <script src="/js/login_script.js"></script>
    </head>
    <body>
        <img src="/images/mbb_logo1.png" alt="photo of the MovieBookBooks Logo">
        
        <form action="/login" method="POST">
        <div id="login">
            <h2>MovieBookBooks Login</h2>
            
            <!--asking for username-->
            <label ><b>Username</b></label>
            <br>
            <input type="text" placeholder="Enter Username" class="details" name="username" id ="username" required ="required">
            <br>
            <br>
            
            <!--asking for password-->
            <label ><b>Password</b></label>
            <br>
            <input type="password" placeholder="Enter Password" class="details" name="password" id ="password1" required="required">
            <br>
            <br>

            <!--asking to confirm password-->
            <label ><b>Confirm Password</b></label>
            <br>
            <input type="password" placeholder="Enter Password" class="details" name="password2" id ="password2" required="required">
            <br>
            <br>

            {{#if error}}
                <p class = "error" role = "alert">
                    {{error}}
                </p>
            {{/if}}

         <!--login as user or manager, this is temporary for MP phase 1
         <a class ="templinks" href="user profile - booking details.html">User</a>
         <br>
         <a class ="templinks" href="manager profile - account details.html">Manager</a>
         <br>
         -->

         <!-- 
         {{#if error}}
                <div class="alert alert-danger" role="alert">
                    {{error}}
                </div>
        {{/if}}-->

            
        <div class="button">
            <!--<a href="/login" class="edit" onclick="return checkForm()">Login</a>-->
            <button class="edit">Login</button>
        </div>
           <br>
           <br>
            <a href="/registration" class="loginLink">No account? Click to Sign up</a>
        </div>
        </form>
    </body>
</html>