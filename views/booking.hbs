<!DOCTYPE html>
<html lang="en" dir="ltr">
  <head>
    <meta charset="utf-8">
    <link rel="stylesheet" type="text/css" href="/css/movie-details.css">
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/font-awesome/4.7.0/css/font-awesome.min.css"/>
    <script src="https://code.jquery.com/jquery-3.4.1.min.js" type="text/javascript"></script>
    <script src="/js/booking-script.js"></script>
    <link rel="icon" type="image/x-icon" href="/images/favicon.ico">
    <title>Book Movie</title>
  </head>
  <body>
    {{> header}}
    <p id="keepID" style="display: none">{{id}}</p>
    <div id="book-container">
      <div id="booknow" style="display: block">

        <div id="choosesched" style="visibility : visible">
          <h2 class="choosesched">Ticket Booking</h2>
          <h3 class="date-time">
            You're booking <span id="book-date">{{date}}</span> on <span id="book-time">{{time}}</span>, at the <span id="book-loc">{{location}}</span> Branch
          </h3>
        </div>

        {{> bookseats}}

        <div class="booknow">

          <a class="submitbutton" type="submit" id="gotoCheckout">Submit Booking</a>
          <!-- <a class="cancelbutton" onclick="history.back()">Back</a> -->
          <a class="cancelbutton" onclick="history.back()">Back</a>
        </div>


      </div>
    </div>

    {{> footer}}
  </body>
</html>
