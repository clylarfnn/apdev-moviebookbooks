<!DOCTYPE html>
<html lang="en" dir="ltr">
  <head>
    <meta charset="utf-8">
    <link rel="stylesheet" type="text/css" href="/css/movie-details.css">
    <script src="https://code.jquery.com/jquery-3.4.1.min.js" type="text/javascript"></script>
    <script src="/js/movie-details-script.js"></script>
    <title>{{title}}</title>
  </head>
  <body>
    {{> header}}


    <div class="movie-details">
      <img class="movie-poster" src="../images/{{moviedetails.moviePoster}}">

      <div class="desc">
        <!-- contains movie details
        rating, genre, directors, synopsis-->
        <h2 id="movie-title">{{moviedetails.movieName}}</h2>

        <ul class="genres">
          <li>{{moviedetails.movieGenre1}}</li>
          <li>{{moviedetails.movieGenre2}}</li>
          <li>{{moviedetails.movieGenre3}}</li>
        </ul>

        <p class="synopsis">
          {{moviedetails.movieSynopsis}}
        </p>
        <!-- <h3>Directors</h3> -->
        <p class="info">
          <span>Directors:</span>
           {{moviedetails.movieDirector}}
        </p>
        <p class="info">
          <span>Cast:</span> <!-- up to 3 casts -->
           {{moviedetails.movieCast}}
        </p>

        <ul class="movie-links">
          <li><a class="schedule" href="#schedule" >Schedule</a></li>
          <li><a class="trailer" href="https://www.youtube.com/watch?v=TcMBFSGVi1c" target="_blank">Watch Trailer</a></li>
        </ul>

      </div>

    </div>

    <div class="movie-banner">
      <img src="../images/banners/{{moviedetails.movieBanner}}">
    </div>





    <div id="schedule" style="visibility: hidden">
      <h2>Schedule</h2>

      <div class="loc-buttons">
        <button type="button" class="tablink active" onclick="changeTab(event, 'loc1')">Manila City</button>
        <button type="button" class="tablink" onclick="changeTab(event, 'loc2')">Bacolod City</button>
        <button type="button" class="tablink" onclick="changeTab(event, 'loc3')">Davao City</button>
        <button type="button" class="tablink" onclick="changeTab(event, 'loc4')">Pangasinan</button>
        <button type="button" class="tablink" onclick="changeTab(event, 'loc5')">Bulacan</button>
      </div>

      <div id="sched-tab">

        <div id="loc1" class="location">
          <h3 class="cinema">Manila City<span class="cinema-num"></span></h3>
          <div class="sched-info">
            <ul class="avail dates" id="dates1">
              <li class="date-title">Available Dates</li>
              <li class="unavail">Unavailable</li>
            </ul>
            <ul class="avail times" id="times1">
              <li class="time-title">Available Times</li>
              <li class="unavail">Unavailable</li>
            </ul>
          </div>
        </div>

        <div id="loc2" class="location" style="display:none">
          <h3 class="cinema">Bacolod City<span class="cinema-num"></span></h3>
          <div class="sched-info">
            <ul class="avail dates" id="dates2">
              <li class="date-title" >Available Dates</li>
              <li class="unavail">Unavailable</li>
            </ul>
            <ul class="avail times" id="times2">
              <li class="time-title">Available Times</li>
              <li class="unavail">Unavailable</li>
            </ul>
          </div>

        </div>

        <div id="loc3" class="location" style="display:none">
          <h3 class="cinema">Davao City<span class="cinema-num"></span></h3>
          <div class="sched-info">
            <ul class="avail dates" id="dates3">
              <li class="date-title" >Available Dates</li>
              <li class="unavail">Unavailable</li>
            </ul>
            <ul class="avail times" id="times3">
              <li class="time-title">Available Times</li>
              <li class="unavail">Unavailable</li>
            </ul>
          </div>

        </div>

        <div id="loc4" class="location" style="display:none">
          <h3 class="cinema">Pangasinan<span class="cinema-num"></span></h3>
          <div class="sched-info">
            <ul class="avail dates" id="dates4">
              <li class="date-title" >Available Dates</li>
              <li class="unavail">Unavailable</li>
            </ul>
            <ul class="avail times" id="times4">
              <li class="time-title">Available Times</li>
              <li class="unavail">Unavailable</li>
            </ul>
          </div>

        </div>

        <div id="loc5" class="location" style="display:none">
          <h3 class="cinema">Bulacan<span class="cinema-num"></span></h3>
          <div class="sched-info">
            <ul class="avail dates" id="dates5">
              <li class="date-title">Available Dates</li>
              <li class="unavail">Unavailable</li>
            </ul>
            <ul class="avail times" id="times5">
              <li class="time-title">Available Times</li>
              <li class="unavail">Unavailable</li>
            </ul>
          </div>

        </div>
      </div>

    </div>



    <div id="book-container">
      <div class="booknow" style="display: none;">
        <a class="bookbutton" onclick="showDiv('booknow')">Book Now</a>
      </div>

      <div id="booknow" style="display: none;">
        <h2 class="choosesched">Choose a Schedule</h2>
        <h3 class="date-time">
          You're booking <span id="book-date">[choose a date]</span> on <span id="book-time">[choose a time]</span>, at the <span id="book-loc">Manila City</span> Branch
        </h3>

        {{> bookseats}}

          </div>
        </div>

        <div class="booknow">
          <a class="submitbutton" type="submit" onclick="submitForm()" href="#container">Submit Booking</a>
          <a class="cancelbutton" onclick="window.location.reload()">Cancel</a>
        </div>

        <div id="container" style="display:none">
          <div id="content">
            <div class="info">
              <div class="center">
                <img src="images/cinema.png">
              </div>
              <h1>Confirm Booking</h1>
              <h2 id="movie">Movie Title</h2>

              <div class="center">
                <h3 id="time-date"><span id="date">Date</span><span id="time">Time</span></h3>
              </div>
              <div class="flex">
                <h3 id="loc">Location</h3>
                <h3 id="cinema">Cinema</h3>
              </div>
            </div>
            <div class="center">
              <div id="tickets">
                <div id="seats">
                  <ul>
                    <li class="seats">Seat1</li>
                    <li class="seats" style="visibility: hidden">Seat2</li>
                    <li class="seats" style="visibility: hidden">Seat3</li>
                  </ul>
                </div>
                <div id="prices">
                  <ul>
                    <li class="prices">Php 200</li>
                    <li class="prices" style="visibility: hidden">Php 200</li>
                    <li class="prices" style="visibility: hidden">Php 200</li>
                  </ul>
                </div>
              </div>
            </div>

            <div class="center">
              <h3 class="total">Total <span id="total">Php 000</span></h3>
            </div>

            <div class="center">
              <a type="button" id="confirm"  href="#verify" onclick="payment()">Pay Booking</a>
            </div>

            <div id="verify" style="visibility: hidden">
              <!-- <form onsubmit="confirmBook('movie-details-avengersendgame.html')"> -->
              <form onsubmit="confirmBook()" action="movie-details-avengersendgame.html">
                <label for="pwd">To verify your payment, please type your password:</label>
                <div class="center">
                  <br /><input type="password" id="pwd" name="pwd" required><br><br>
                  <input type="submit">
                </div>

              </form>
            </div>

          </div>
        </div>


      </div>

    </div>


    {{> footer}}

  </body>
</html>
